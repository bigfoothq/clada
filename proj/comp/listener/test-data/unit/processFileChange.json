{
  "cases": [
    {
      "name": "cooldown prevents rapid re-execution",
      "setup": {
        "lastExecutionTime": "now-1500",
        "filePath": "/tmp/t_cooldown/test.md",
        "fileContent": "```sh sham\n#!SHAM [@three-char-SHA-256: cd1]\naction = \"file_write\"\npath = \"/tmp/t_cooldown/out.txt\"\ncontent = \"test\"\n#!END_SHAM_cd1\n```"
      },
      "expected": {
        "processed": false,
        "reason": "cooldown"
      }
    },
    {
      "name": "already processing prevents concurrent execution",
      "setup": {
        "isProcessing": true,
        "filePath": "/tmp/t_concurrent/test.md",
        "fileContent": "```sh sham\n#!SHAM [@three-char-SHA-256: cp1]\naction = \"file_write\"\npath = \"/tmp/t_concurrent/out.txt\"\ncontent = \"test\"\n#!END_SHAM_cp1\n```"
      },
      "expected": {
        "processed": false,
        "reason": "already_processing"
      }
    },
    {
      "name": "large output exceeds limit",
      "setup": {
        "filePath": "/tmp/t_large/test.md",
        "fileContent": "```sh sham\n#!SHAM [@three-char-SHA-256: lg1]\naction = \"exec\"\nlang = \"python\"\ncode = \"print('x' * 60000)\"\n#!END_SHAM_lg1\n```"
      },
      "expected": {
        "processed": true,
        "clipboardContent": "summary_only",
        "outputFileContains": "[Full output too large for clipboard]"
      }
    },
    {
      "name": "clipboard failure handled gracefully",
      "setup": {
        "filePath": "/tmp/t_clipfail/test.md",
        "fileContent": "```sh sham\n#!SHAM [@three-char-SHA-256: cf1]\naction = \"file_write\"\npath = \"/tmp/t_clipfail/out.txt\"\ncontent = \"test\"\n#!END_SHAM_cf1\n```",
        "forceClipboardFailure": true
      },
      "expected": {
        "processed": true,
        "prependContains": "‚ùå Clipboard copy failed"
      }
    }
  ]
}