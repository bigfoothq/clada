{
  "cases": [
    {
      "name": "string type - valid string",
      "input": ["hello world", {"type": "string", "required": true}],
      "expected": true
    },
    {
      "name": "string type - empty string valid",
      "input": ["", {"type": "string", "required": true}],
      "expected": true
    },
    {
      "name": "string type - number invalid",
      "input": [123, {"type": "string", "required": true}],
      "expected": false
    },
    {
      "name": "string type - null invalid",
      "input": [null, {"type": "string", "required": true}],
      "expected": false
    },
    {
      "name": "integer type - valid integer",
      "input": [42, {"type": "integer", "required": true}],
      "expected": true
    },
    {
      "name": "integer type - zero valid",
      "input": [0, {"type": "integer", "required": true}],
      "expected": true
    },
    {
      "name": "integer type - negative valid",
      "input": [-5, {"type": "integer", "required": true}],
      "expected": true
    },
    {
      "name": "integer type - float invalid",
      "input": [3.14, {"type": "integer", "required": true}],
      "expected": false
    },
    {
      "name": "integer type - string invalid",
      "input": ["42", {"type": "integer", "required": true}],
      "expected": false
    },
    {
      "name": "boolean type - true valid",
      "input": [true, {"type": "boolean", "required": false}],
      "expected": true
    },
    {
      "name": "boolean type - false valid",
      "input": [false, {"type": "boolean", "required": false}],
      "expected": true
    },
    {
      "name": "boolean type - string invalid",
      "input": ["true", {"type": "boolean", "required": false}],
      "expected": false
    },
    {
      "name": "boolean type - 1 invalid",
      "input": [1, {"type": "boolean", "required": false}],
      "expected": false
    },
    {
      "name": "enum type - valid value",
      "input": ["python", {"type": "enum", "values": ["python", "javascript", "bash"], "required": true}],
      "expected": true
    },
    {
      "name": "enum type - invalid value",
      "input": ["ruby", {"type": "enum", "values": ["python", "javascript", "bash"], "required": true}],
      "expected": false
    },
    {
      "name": "enum type - case sensitive",
      "input": ["Python", {"type": "enum", "values": ["python", "javascript", "bash"], "required": true}],
      "expected": false
    },
    {
      "name": "enum type - null invalid",
      "input": [null, {"type": "enum", "values": ["python", "javascript"], "required": true}],
      "expected": false
    }
  ]
}